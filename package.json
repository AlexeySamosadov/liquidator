{
  "name": "venus-liquidation-bot",
  "version": "1.0.0",
  "description": "Venus Protocol liquidation bot for BNB Chain with hybrid capital/flash loan strategy",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:liquidators": "jest tests/unit/StandardLiquidator.test.ts tests/unit/FlashLoanLiquidator.test.ts tests/unit/liquidators-integration.test.ts",
    "test:liquidators:watch": "jest --watch tests/unit/StandardLiquidator.test.ts tests/unit/FlashLoanLiquidator.test.ts tests/unit/liquidators-integration.test.ts",
    "test:liquidators:coverage": "jest --coverage --collectCoverageFrom='src/services/liquidation/{StandardLiquidator,FlashLoanLiquidator}.ts' tests/unit/StandardLiquidator.test.ts tests/unit/FlashLoanLiquidator.test.ts tests/unit/liquidators-integration.test.ts",
    "test:profitability": "jest tests/unit/ProfitabilityCalculator.test.ts tests/unit/TransactionBuilder.test.ts",
    "test:profitability:watch": "jest --watch tests/unit/ProfitabilityCalculator.test.ts tests/unit/TransactionBuilder.test.ts",
    "test:profitability:coverage": "jest --coverage tests/unit/ProfitabilityCalculator.test.ts tests/unit/TransactionBuilder.test.ts",
    "test:profitability:integration": "jest tests/integration/profitability-integration.test.ts",
    "test:profitability:all": "jest tests/unit/ProfitabilityCalculator.test.ts tests/unit/TransactionBuilder.test.ts tests/integration/profitability-integration.test.ts",
    "test:engine": "jest tests/unit/LiquidationEngine.test.ts tests/unit/LiquidationStrategy.test.ts",
    "test:engine:watch": "jest --watch tests/unit/LiquidationEngine.test.ts tests/unit/LiquidationStrategy.test.ts",
    "test:engine:coverage": "jest --coverage --collectCoverageFrom='src/services/liquidation/{LiquidationEngine,LiquidationStrategy}.ts' tests/unit/LiquidationEngine.test.ts tests/unit/LiquidationStrategy.test.ts",
    "test:engine:integration": "jest tests/integration/liquidation-engine-integration.test.ts",
    "test:engine:all": "jest tests/unit/LiquidationEngine.test.ts tests/unit/LiquidationStrategy.test.ts tests/integration/liquidation-engine-integration.test.ts",
    "test:monitoring": "jest tests/unit/HealthFactorCalculator.test.ts tests/unit/PositionTracker.test.ts tests/unit/MonitoringService.test.ts",
    "test:monitoring:watch": "jest --watch tests/unit/HealthFactorCalculator.test.ts tests/unit/PositionTracker.test.ts tests/unit/MonitoringService.test.ts",
    "test:monitoring:coverage": "jest --coverage --collectCoverageFrom='src/services/monitoring/{HealthFactorCalculator,PositionTracker,MonitoringService}.ts' tests/unit/HealthFactorCalculator.test.ts tests/unit/PositionTracker.test.ts tests/unit/MonitoringService.test.ts",
    "test:monitoring:integration": "jest tests/integration/monitoring-integration.test.ts",
    "test:monitoring:all": "jest tests/unit/HealthFactorCalculator.test.ts tests/unit/PositionTracker.test.ts tests/unit/MonitoringService.test.ts tests/integration/monitoring-integration.test.ts",
    "test:dex": "jest tests/unit/CollateralManager.test.ts tests/unit/SwapExecutor.test.ts tests/unit/PriceImpactChecker.test.ts tests/unit/RouteOptimizer.test.ts",
    "test:dex:watch": "jest --watch tests/unit/CollateralManager.test.ts tests/unit/SwapExecutor.test.ts tests/unit/PriceImpactChecker.test.ts tests/unit/RouteOptimizer.test.ts",
    "test:dex:coverage": "jest --coverage --collectCoverageFrom='src/services/dex/{CollateralManager,SwapExecutor,PriceImpactChecker,RouteOptimizer}.ts' tests/unit/CollateralManager.test.ts tests/unit/SwapExecutor.test.ts tests/unit/PriceImpactChecker.test.ts tests/unit/RouteOptimizer.test.ts",
    "test:dex:integration": "jest tests/integration/dex-integration.test.ts",
    "test:dex:all": "jest tests/unit/CollateralManager.test.ts tests/unit/SwapExecutor.test.ts tests/unit/PriceImpactChecker.test.ts tests/unit/RouteOptimizer.test.ts tests/integration/dex-integration.test.ts",
    "test:dex:collateral": "jest tests/unit/CollateralManager.test.ts",
    "test:dex:swap": "jest tests/unit/SwapExecutor.test.ts",
    "test:dex:impact": "jest tests/unit/PriceImpactChecker.test.ts",
    "test:dex:route": "jest tests/unit/RouteOptimizer.test.ts",
    "test:verbose": "jest --verbose",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "wallet:generate": "node scripts/generate-wallet.js",
    "wallet:address": "node scripts/get-wallet-address.js",
    "wallet:balance": "node scripts/check-balance.js",
    "healthcare": "ts-node src/scripts/healthcareMonitor.ts",
    "healthcare:quick": "ts-node src/scripts/quickHealthcheck.ts",
    "healthcare:full": "ts-node src/scripts/fullProtocolScan.ts",
    "healthcare:small": "ts-node src/scripts/smallPositionsMonitor.ts",
    "healthcare:realistic": "ts-node src/scripts/realisticSmallPositions.ts",
    "healthcare:verify": "ts-node src/scripts/verifyHealthFactors.ts",
    "healthcare:monitor": "ts-node src/scripts/periodicHealthMonitor.ts",
    "healthcare:watch": "watch -n 300 'npm run healthcare:quick'",
    "test:websocket": "ts-node src/scripts/testWebSocket.ts",
    "gmx:test": "ts-node src/scripts/testGMXConnection.ts",
    "gmx:monitor": "ts-node src/scripts/testGMXMonitoring.ts",
    "gmx:scan": "ts-node src/scripts/scanRealGMXPositions.ts",
    "gmx:scan:events": "ts-node src/scripts/scanGMXEvents.ts",
    "gmx:scan:sdk": "ts-node src/scripts/scanGMXWithSDK.ts"
  },
  "dependencies": {
    "@gmx-io/sdk": "^1.3.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "venus",
    "liquidation",
    "bnb-chain",
    "defi",
    "bot"
  ],
  "author": "",
  "license": "MIT"
}
