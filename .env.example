# -----------------------------
# Blockchain Configuration
# -----------------------------
# RPC endpoint for BNB Chain mainnet. Example: https://bsc-mainnet.nodereal.io/v1/YOUR_API_KEY
# Note: WebSocket URLs (wss://) are not currently supported. Use HTTP/HTTPS endpoints only.
# Recommended providers: NodeReal, Binance, Ankr, QuickNode
RPC_URL=https://bsc-dataseed.binance.org/
# Numeric chain id for BNB Chain mainnet
CHAIN_ID=56
# Private key WITHOUT 0x prefix. Use a dedicated wallet.
PRIVATE_KEY=your_private_key_here

# -----------------------------
# Bot Configuration
# -----------------------------
# Minimum profit (in USD) required to execute a liquidation
MIN_PROFIT_USD=5
# Minimum position debt size to consider for liquidation (USD)
MIN_POSITION_SIZE_USD=50
# Maximum position size (in USD) the bot will liquidate
MAX_POSITION_SIZE_USD=1000
# Gas price multiplier applied over base fee (e.g. 1.2 = +20%)
GAS_PRICE_MULTIPLIER=1.2
# Hard cap for gas price in Gwei; bot pauses above this threshold
MAX_GAS_PRICE_GWEI=10

# -----------------------------
# Risk Management
# -----------------------------
# Comma-separated token addresses to never liquidate (blacklist)
TOKEN_BLACKLIST=
# Comma-separated token addresses to ONLY liquidate (whitelist, empty = allow all)
TOKEN_WHITELIST=
# Maximum daily loss in USD before bot auto-pauses (default: $50)
MAX_DAILY_LOSS_USD=50
# Path to emergency stop flag file (create this file to pause bot)
EMERGENCY_STOP_FILE=./emergency_stop.flag
# Dry-run mode: simulate liquidations without sending transactions (true/false)
DRY_RUN=false

# -----------------------------
# Liquidation Strategy
# -----------------------------
# Whether to use flash loans for large positions
USE_FLASH_LOANS=false
# Flash loan fee in basis points (500 = 0.05% for PancakeSwap V3)
FLASH_LOAN_FEE_BPS=500
# Optional: Address of deployed flash loan liquidator contract (leave empty to use standard liquidation only)
FLASH_LIQUIDATOR_CONTRACT=
# Collateral handling strategy: AUTO_SELL | HOLD | CONFIGURABLE
COLLATERAL_STRATEGY=AUTO_SELL
# Max allowed slippage for collateral sales (0.02 = 2%)
SLIPPAGE_TOLERANCE=0.02
# Minimum USD value to trigger a swap (skip dust amounts)
MIN_SWAP_AMOUNT_USD=10
# Maximum acceptable oracle-vs-DEX USD price deviation fraction (0.03 = 3%)
MAX_PRICE_IMPACT=0.03
# Preferred stablecoin for AUTO_SELL (USDT or BUSD address)
PREFERRED_STABLECOIN=0x55d398326f99059fF775485246999027B3197955

# -----------------------------
# Monitoring
# -----------------------------
# Monitoring Configuration
# How often to check health factors of known accounts (milliseconds)
POLLING_INTERVAL_MS=10000
# Positions with HF below this threshold are considered liquidatable
MIN_HEALTH_FACTOR=1.0

# -----------------------------
# Execution Loop
# -----------------------------
# How often to check for liquidatable positions and attempt execution (milliseconds)
EXECUTION_INTERVAL_MS=30000
# Maximum number of retry attempts for failed liquidations
EXECUTION_MAX_RETRIES=3
# Base delay for exponential backoff retry logic (milliseconds, 60000 = 1 minute)
EXECUTION_BASE_RETRY_DELAY_MS=60000
# Maximum delay cap for exponential backoff (milliseconds, 600000 = 10 minutes)
EXECUTION_MAX_RETRY_DELAY_MS=600000
# Cooldown period after successful liquidation before retrying same position (milliseconds, 300000 = 5 minutes)
EXECUTION_SUCCESS_COOLDOWN_MS=300000

# -----------------------------
# Logging
# -----------------------------
# Log level: error | warn | info | debug
LOG_LEVEL=info
# Whether to also write logs to rotating files under ./logs
LOG_TO_FILE=true
# How often to log combined monitoring and execution statistics (milliseconds, 60000 = 1 minute)
STATS_LOGGING_INTERVAL_MS=60000

# -----------------------------
# Venus Protocol Addresses (BNB Chain)
# -----------------------------
VENUS_COMPTROLLER=0xfD36E2c2a6789Db23113685031d7F16329158384
# Oracle will be fetched from Comptroller at runtime
VENUS_ORACLE=

# -----------------------------
# DEX Addresses
# -----------------------------
# PancakeSwap V3 SmartRouter on BNB Chain (for token swaps)
PANCAKESWAP_ROUTER=0x13f4EA83D0bd40E75C8222255bc855a974568Dd4
# PancakeSwap V3 Factory on BNB Chain (for flash loans)
PANCAKESWAP_V3_FACTORY=0x0BFbCF9fa4f9C56B0F40a671Ad40E0805A091865
