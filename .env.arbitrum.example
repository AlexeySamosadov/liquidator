# =============================================
# GMX V2 ARBITRUM CONFIGURATION
# =============================================
# This config enables GMX V2 perpetuals liquidation bot on Arbitrum
# 10x more TVL than BSC, leverage up to 100x, frequent liquidations

# -----------------------------
# Blockchain Configuration (ARBITRUM)
# -----------------------------
# NodeReal Arbitrum RPC (replace with your API key)
RPC_URL=https://open-platform.nodereal.io/ba3f9708c344476ab081a85fee975139/arbitrum-nitro/
# NodeReal WebSocket for real-time events
# RPC_URL=wss://open-platform.nodereal.io/ws/ba3f9708c344476ab081a85fee975139/arbitrum-nitro/

# Arbitrum Chain ID
CHAIN_ID=42161

# Private key WITHOUT 0x prefix
PRIVATE_KEY=your_private_key_here

# -----------------------------
# Protocol Selection
# -----------------------------
# Which protocols to monitor (VENUS, GMX)
ENABLED_PROTOCOLS=GMX

# -----------------------------
# GMX V2 Contract Addresses (Arbitrum)
# -----------------------------
# These are pre-configured, no need to change
GMX_MARKET_FACTORY=0xf5F30B10141E1F63FC11eD772931A8294a591996
GMX_EXCHANGE_ROUTER=0x7c68c7866a64fa2160f78eeae12217ffbf871fa8
GMX_DEPOSIT_VAULT=0xF89e77e8Dc11691C9e8757e84aaFbCD8A67d7A55
GMX_READER=0x60a0fF4cDaF0f6D496d35a5B7E7f4e81e7bF4D23

# -----------------------------
# DEX Configuration (Uniswap V3 on Arbitrum)
# -----------------------------
PANCAKESWAP_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564
PANCAKESWAP_V3_FACTORY=0x1F98431c8aD98523631AE4a59f267346ea31F984

# -----------------------------
# Bot Configuration (GMX Optimized)
# -----------------------------
# Lower min profit due to lower Arbitrum gas costs
MIN_PROFIT_USD=1
# GMX positions can be small but high leverage
MIN_POSITION_SIZE_USD=10
MAX_POSITION_SIZE_USD=5000
# Lower gas multiplier on Arbitrum
GAS_PRICE_MULTIPLIER=1.1
# Gas is cheap on Arbitrum (typically 0.1-0.5 gwei)
MAX_GAS_PRICE_GWEI=2

# -----------------------------
# Private Transaction Support (bloXroute)
# -----------------------------
# Enable private orderflow to avoid MEV competition
USE_PRIVATE_ORDERFLOW=true
# bloXroute Arbitrum Private RPC
PRIVATE_RPC_URL=https://arbitrum.blxrbdn.com
# bloXroute API Key (get from https://bloxroute.com)
BLOXROUTE_AUTH_HEADER=YOUR_BLOXROUTE_AUTH_HEADER

# -----------------------------
# Risk Management
# -----------------------------
TOKEN_BLACKLIST=
TOKEN_WHITELIST=
MAX_DAILY_LOSS_USD=100
EMERGENCY_STOP_FILE=./emergency_stop.flag
DRY_RUN=false

# -----------------------------
# Liquidation Strategy (GMX)
# -----------------------------
# Flash loans less useful on GMX (already leveraged)
USE_FLASH_LOANS=false
COLLATERAL_STRATEGY=AUTO_SELL
SLIPPAGE_TOLERANCE=0.02
MIN_SWAP_AMOUNT_USD=5
MAX_PRICE_IMPACT=0.03
# USDC is the main stablecoin on Arbitrum
PREFERRED_STABLECOIN=0xaf88d065e77c8cC2239327C5EDb3A432268e5831

# -----------------------------
# Monitoring (Real-time WebSocket)
# -----------------------------
# Faster polling for high-leverage positions
POLLING_INTERVAL_MS=10000
POLLING_BATCH_SIZE=50
# GMX liquidation threshold is around 1.0
MIN_HEALTH_FACTOR=1.0

# -----------------------------
# Execution Loop (Aggressive)
# -----------------------------
# Check for liquidations every 10 seconds
EXECUTION_INTERVAL_MS=10000
EXECUTION_MAX_RETRIES=3
EXECUTION_BASE_RETRY_DELAY_MS=30000
EXECUTION_MAX_RETRY_DELAY_MS=300000
EXECUTION_SUCCESS_COOLDOWN_MS=60000

# -----------------------------
# Logging
# -----------------------------
LOG_LEVEL=info
LOG_TO_FILE=true
STATS_LOGGING_INTERVAL_MS=60000

# -----------------------------
# Historical Scanning (GMX)
# -----------------------------
ENABLE_HISTORICAL_SCAN=true
# Scan last 24 hours on startup
HISTORICAL_SCAN_BLOCKS=86400
# Arbitrum produces ~4 blocks/sec, use smaller windows
HISTORICAL_SCAN_WINDOW_BLOCKS=1000
MONITORING_MODE=ENABLED

# -----------------------------
# Advanced Scan Configuration
# -----------------------------
SCAN_INTERVAL_MS=10000
SCAN_BATCH_SIZE=50
SCAN_WINDOW_BLOCKS=1000
RPC_DELAY_MS=50
# NodeReal Arbitrum supports large queries
MAX_NODE_REAL_BLOCKS=100000
